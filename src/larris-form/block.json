{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "create-block/larris-form",
	"version": "0.1.0",
	"title": "Larris Form",
	"category": "widgets",
	"icon": "email",
	"description": "Example block scaffolded with Create Block tool.",
	"example": {},
	"supports": {
		"html": false,
		"spacing": {
			"margin":true,
			"padding":true
		},
		"color": {
			"background": true,
			"text": true
		},
		"align": true
	},
	"textdomain": "larris-form",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js",
	"attributes": {
		"nameLabel": {
			"type":"string",
			"default": "Your Name"
		},
		"subjectLabel": {
			"type":"string",
			"default": "Your Subject"
		},
		"emailLabel":{
			"type":"string",
			"default": "Your Email"
		},
		"messageLabel": {
			"type":"string",
			"default": "Your Message"
		},
		"inputFontSize": {
			"type": "string",
			"default": "16px"
		},
		"labelFontSize": {
			"type": "string",
			"default": "18px"
		},
		"inputPadding": {
			"type": "string",
			"default": "10px"
		},
		"inputMarginTop": {
			"type": "string",
			"default": "5px"
		},
		"textareaHeight": {
			"type": "string",
			"default": "150px"
		},
		"inputGap": {
			"type": "string",
			"default": "5px"
		},
		"buttonFontSize": {
			"type": "string",
			"default": "18px"
		},
		"buttonPadding": {
			"type": "string",
			"default": "10px"
		},
		"buttonTextColor": {
			"type": "string",
			"default": "#ffff"
		},
		"buttonBackgroundColor": {
			"type": "string",
			"default": "black"
		}

	}
}
